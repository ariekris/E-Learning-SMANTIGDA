<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="3dp"
    android:padding="10dp"
    android:id="@+id/cardviewbahasa"
    app:cardCornerRadius="5dp"
    tools:context="com.v1.e_learningsmantigda.MateriPelajaran.main_matpel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">

        <ImageView
            android:id="@+id/iv_coverbuku"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/bg1" />

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/iv_coverbuku"
            android:text="Judul Buku"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nameTxt"
            android:layout_below="@+id/nameTxt"
            android:text="Kelas"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tahunterbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/kelas"
            android:layout_below="@+id/kelas"
            android:text="Tahun Terbit"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_pengarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tahunterbit"
            android:layout_below="@+id/tahunterbit"
            android:text="Pengarang"
            android:textSize="12dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>