<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgkritiksaran"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.v1.e_learningsmantigda.Aspirasi.Aspirasi">

    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_smantigda" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="Suarakan Aspirasimu untuk Sekolah yang lebih baik"
        android:textAlignment="center" />


    <!--<TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih sasaran dan tuliskan aspirasimu"
        android:background="@color/colorGray"/>-->

    <Spinner
        android:id="@+id/spinSasaranAspirasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Sasaran Aspirasi"
        android:entries="@array/sasaran"
        android:paddingTop="5dp"></Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <EditText
            android:id="@+id/txtAspirasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Suarakan aspirasi anda disini"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAlignment="viewStart"
            android:textColorLink="?android:attr/colorPrimary" />

        <Button
            android:id="@+id/btnAspirasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kirim" />


    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:padding="5dp"
        android:text="Daftar Aspirasi Siswa"
        android:textAlignment="center" />


    <ListView
        android:id="@+id/listViewAspirasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
